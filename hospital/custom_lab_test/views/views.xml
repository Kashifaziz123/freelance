<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="view_lab_test_product_form" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']/div[2]" position="after">
                    <div>
                        <field name="is_labtest"/>
                        <label for="is_labtest"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_lab_test_type_form" model="ir.ui.view">
            <field name="name">Lab Tests</field>
            <field name="model">oeh.medical.lab.test</field>
            <field name="inherit_id" ref="oehealth.oeh_medical_lab_test_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='patient']" position="replace">
                    <field name="patient" options="{'no_create': True}"/>
                    <field name="c_patient"/>

                </xpath>

                <xpath expr="//field[@name='pathologist']" position="replace">
                    <field name="pathologist" options="{'no_create': True}"/>
                </xpath>

            </field>

        </record>


        <record id="view_lab_test_type_form" model="ir.ui.view">
            <field name="name">Lab Test Types</field>
            <field name="model">oeh.medical.labtest.types</field>
            <field name="inherit_id" ref="oehealth.oeh_medical_lab_test_types_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div/div[1]" position="after">
                    <div class="oe_title" style="width: 390px;">
                        <label class="oe_edit_only" for="product_id"/>
                        <h1>
                            <field name="product_id" domain="[('product_tmpl_id.is_labtest', '=', True)]"
                                   class="oe_inline"/>
                        </h1>
                    </div>
                </xpath>

            </field>

        </record>

        <record id="inherit_outpatient_invoice_form" model="ir.ui.view">
            <field name="name">account.out.patient.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="8"/>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/h1[1]" position="after">
                    <group>
                        <field name="is_created" invisible="1"/>
                        <field name="is_labtest_invoice"/>
                    </group>
                </xpath>
                <xpath expr="//form/header/button[5]" position="after">
                    <button name="action_create_labtests" type="object"
                            attrs="{'invisible': ['|',('is_labtest_invoice','=',False),('is_created','=',True)]}"
                            string="Create Lab Test"
                            class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>