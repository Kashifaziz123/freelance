<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1: -->
<templates id="template" xml:space="preserve">
	
	<t t-name="PatientTemplate">
		<div class="modal-dialog">
			<div class="popup popup-textinput" >
				<p style="text-align: center;" class="title">
					<t t-if="widget.options.title">
						<t t-esc="widget.options.title || '' " />
					</t>
				</p>
				<br/>
				<span id="msg-indent" style="color:red;"></span>
				<br/>
				<div class="col-xs-6" style="margin-bottom: 40px;">
					<span>Inpatient Admissions</span>
					<select id="inpatient_id" name="inpatient_id" style="font-size: 18px;padding: 10px;width: 80%;background: #fff;"/>
				</div>
				<div class="col-xs-6">
					<span>Indent No</span><br/>
					<input id="indent_no" name="indent_no" type="text" minlength="5" data-minlength="5" />
				</div>
				<div class="footer">
					<div class="button confirm" id="confirm-btn">
						Confirm
					</div>
					<div class="button cancel">
						Cancel
					</div>
				</div>
			</div>
		</div>
	</t>
	
	<t t-extend="PosTicket">
		<t t-jquery="div.receipt-user" t-operation="after">
			<div class="receipt-user">
				<t t-if="widget.pos.identification_code"> Patient ID: <t t-esc="widget.pos.identification_code"/><br /></t>
				<t t-if="widget.pos.patient_name"> Patient Name: <t t-esc="widget.pos.patient_name"/><br /></t>
				<t t-if="widget.pos.number"> Admission ID: <t t-esc="widget.pos.number"/><br /></t>
				<t t-if="widget.pos.indent_no"> Indent No: <t t-esc="widget.pos.indent_no"/><br /></t>
			</div>
		</t>
	</t>
</templates>

