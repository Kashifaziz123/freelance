<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    
    
    <!-- own base group-->        
        <record model="ir.module.category" id="module_category_sale_target">
            <field name="name">Sale Targer</field>
            <field name="description">The Office technology Applilcation</field>
            <field name="sequence">20</field>

         </record>
        
        <record id="group_incentive_manager" model="res.groups">
            <field name="name">Own Shop Target</field>
            <field name="category_id" ref="module_category_sale_target" />
            <!-- <field name="users" eval="[(4, ref('base.group_user'))]"/> -->
        </record>
        
        
        <record id="group_target_salesman" model="res.groups">
            <field name="name">Sales Target Manager</field>
            <field name="category_id" ref="module_category_sale_target"/>
            <field name="implied_ids" eval="[(4, ref('group_incentive_manager'))]"/>
            <field name="comment">the user will have access to his own data in the sales application.</field>
        </record>
        
        <record id="group_company" model="res.groups">
            <field name="name">Company Setup</field>
            <field name="category_id" ref="module_category_sale_target"/>
        </record>
                
        <record id="group_Region" model="res.groups">
            <field name="name">Region Setup</field>
            <field name="category_id" ref="module_category_sale_target"/>
        </record>
        <record id="group_top" model="res.groups">
            <field name="name">Company To Branch</field>
            <field name="category_id" ref="module_category_sale_target"/>
        </record>
        <record id="group_bottom" model="res.groups">
            <field name="name">Branch to Company</field>
            <field name="category_id" ref="module_category_sale_target"/>
        </record>

        <record id="crm_rule_own_target" model="ir.rule">
            <field name="name">Show All target</field>
            <field ref="incentive.model_target_setup" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('incentive.group_target_salesman'))]"/>
        </record>
        
        <record id="crm_rule_all_target" model="ir.rule">
            <field name="name">Show Own target</field>
            <field ref="incentive.model_target_setup" name="model_id"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('incentive.group_incentive_manager'))]"/>
        </record>
        

    </data>
</odoo>